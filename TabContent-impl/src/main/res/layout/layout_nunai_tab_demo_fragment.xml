<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/demo_mian_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6633B5E5"
            android:gravity="center"
            android:text="TabBar高度"
            android:textColor="#ffffff"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/testTv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@drawable/selector_content_bg"
                android:focusable="true"
                android:gravity="center"
                android:text="TV1"
                android:textColor="#ffffff"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/testTv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@drawable/selector_content_bg"
                android:focusable="true"
                android:gravity="center"
                android:text="TV2"
                android:textColor="#ffffff"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="20px">

            <TextView
                android:id="@+id/testTv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@drawable/selector_content_bg"
                android:focusable="true"
                android:gravity="center"
                android:text="TV3"
                android:textColor="#ffffff"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/testTv4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@drawable/selector_content_bg"
                android:focusable="true"
                android:gravity="center"
                android:text="TV4"
                android:textColor="#ffffff"
                android:textSize="32sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>